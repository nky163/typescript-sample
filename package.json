{
  "name": "typescript-sample",
  "version": "1.0.0",
  "description": "A sample application implementing Clean Architecture and Hexagonal Architecture using TypeScript, Express, TypeORM, and PostgreSQL.",
  "main": "src/adapter/in/web/server.ts",
  "scripts": {
    "prepare": "husky install",
    "start:db": "docker compose up -d db",
    "start": "npm run start:db && ts-node src/adapter/in/web/server.ts",
    "build": "tsc",
    "migrate": "ts-node scripts/migrate.ts",
    "seed": "ts-node scripts/seed.ts",
    "test:db:up": "docker compose -f docker-compose.test.yml up -d db",
    "test:db:down": "docker compose -f docker-compose.test.yml down -v",
    "test": "npm run test:db:up && npm run migrate && jest && npm run test:db:down",
    "lint": "gts lint",
    "lint:fix": "gts fix",
    "format": "gts format",
    "check": "gts check",
    "ci": "npm run lint && npm test"
  },
  "dependencies": {
    "dotenv": "^17.2.1",
    "express": "^4.21.2",
    "pg": "^8.12.0",
    "typeorm": "^0.3.25",
    "winston": "^3.13.0",
    "zod": "^4.0.16"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.11",
    "@types/supertest": "^2.0.16",
    "gts": "^6.0.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.0"
  },
  "lint-staged": {
    "*.{ts,js,tsx,jsx}": [
      "gts fix"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}
