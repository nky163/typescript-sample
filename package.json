{
  "name": "typescript-sample",
  "version": "1.0.0",
  "description": "A sample application implementing Clean Architecture and Hexagonal Architecture using TypeScript, Express, TypeORM, and PostgreSQL.",
  "main": "src/adapter/in/web/server.ts",
  "scripts": {
    "prepare": "husky install",
    "start:db": "docker compose up -d db",
    "start": "npm run start:db && ts-node src/adapter/in/web/server.ts",
    "build": "tsc",
    "migrate": "ts-node scripts/migrate.ts",
    "seed": "ts-node scripts/seed.ts",
    "test:db:up": "docker compose -f docker-compose.test.yml up -d db",
    "test:db:down": "docker compose -f docker-compose.test.yml down -v",
    "test": "npm run test:db:up && DB_HOST=localhost DB_PORT=5432 DB_USER=user DB_PASSWORD=password DB_NAME=sample_db sh -c 'npm run migrate && jest' && npm run test:db:down",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format:check": "prettier --check .",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "check": "npm run typecheck && npm run lint",
    "ci:lint": "npm run lint && npm run format:check",
    "ci:test": "npm test",
    "ci": "npm run typecheck && npm run ci:lint && npm run dep:check && npm run ci:test",
    "dep:check": "dependency-cruise -c .dependency-cruiser.js src | tee dependency-graph.dot"
  },
  "dependencies": {
    "decimal.js": "^10.6.0",
    "dotenv": "^17.2.1",
    "express": "^4.21.2",
    "pg": "^8.12.0",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.25",
    "winston": "^3.13.0",
    "zod": "^4.0.16"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.11",
    "@types/pg": "^8.11.6",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^8.5.0",
    "@typescript-eslint/parser": "^8.5.0",
    "dependency-cruiser": "^16.6.0",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsdoc": "^52.0.4",
    "eslint-plugin-n": "^17.21.3",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-unused-imports": "^4.1.4",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.3.3",
    "supertest": "^7.1.4",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}
